        <Label x:Name="label1" Content="Port:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ServerNameInput" HorizontalAlignment="Left" Height="22" Margin="96,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" MaxLength="100"/>
        <TextBox x:Name="PortInput" HorizontalAlignment="Left" Height="22" Margin="96,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" Text="42424" IsReadOnly="True"/>

    </Grid>
</Window>
